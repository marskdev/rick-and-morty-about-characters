mixin socialLinks(item)
  li.nav-item.pe-2
    a.nav-link.p-2.fs-4.bg-secondary.rounded-circle.text-white.fab(class=item.icon href=item.link target="_blank")

// FOOTER
footer.container-fluid.bg-dark.text-white.mt-5
  .row.py-4.border-top.d-flex.flex-wrap.flex-sm-row-reverse.justify-content-center.align-items-center
    .col-12.col-sm-4.d-flex.flex-column.align-items-center.pb-4.pb-sm-0
      img(src=logoSmall, alt="Rick and morty logo" width="150" )
      .d-grid.col-8
        a(href="#" role="button").btn.btn-light Watch API Docs
    .col-12.col-sm-5.d-flex.flex-column.align-items-center.align-items-sm-start
      a.mb-1.fs-1.text-decoration-none.text-white(href=portfolio target="_blank") #{name}
      ul.nav.justify-content-start
        each link in socialLinks
          +socialLinks(link)
  .row.py-3.border-top.d-flex.flex-wrap.justify-content-center.justify-content-between-md.align-items-center
    p.col-md-4.mb-0.text-muted.text-center &copy; #{year} MarskDev